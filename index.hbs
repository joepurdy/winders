{{!< default}}

<header class="masthead {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
	<div class="header-wrapper">
		<figure class="logo">
			{{#if @blog.logo}}<a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Joe Codes Logo"></a>{{/if}}
		</figure>
		
		<div class="title">
			<a href="{{@blog.url}}">
				<h1>{{@blog.title}}</h1>
			</a>
			<p>{{@blog.description}}</p>
			<div class="line"></div>
		</div>

		<div class="bottom">
			{{> "menu"}}
		</div>

		<footer class="blog-footer">
			<p>All content copyright <a href="/">Joe Purdy</a> &copy; {{date format='YYYY'}} &bull; All rights reserved.</p>
			<p>Published with <a href="http://ghost.org">Ghost.</a></p>
		</footer>
		
	</div>
</header>

<section class="container">

	{{> "loop"}}

</section>
